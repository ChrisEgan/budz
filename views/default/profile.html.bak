<ul>

<h3>{{=userperson.first_name}}</h3>

    
<li><h4>Bio:{{=userperson.bio}} </h4> Price: {{=userperson.price}} Areas of expertise: {{=userperson.subject1}}

</li>

</ul>


{{=A('Edit', _class='btn', _href=URL('default', 'editprofile', vars=dict(edit='yes')))}}

    
